<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Claims Tree View -->
    <record id="insurance_claims_tree_view" model="ir.ui.view">
        <field name="name">insurance.claim.tree</field>
        <field name="model">insurance.claim</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Claims" decoration-bf="message_needaction==True">
                <field name="claim_code" string="Claim Number"/>
                <field name="claimed_date"/>
                <field name="partner_id"/>
                <field name="claim_manager_id"/>
                <field name="claimed_amount_total" sum="Total Amount Claimed" widget="monetary"/>
                <field name="amount_approved_total" sum="Total Amount Approved" widget="monetary"/>
                <field name="state"/>
                <field name="claim_comments"/>
            </tree>
        </field>
    </record>
    
    <record id="action_insurance_claims_view" model="ir.actions.act_window">
        <field name="name">Insurance Claims</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">insurance.claim</field>
        <!-- <field name="view_id" ref="insurance_claims_tree_view"/> -->
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
    </record>
    
    <menuitem action="action_insurance_claims_view"
        id="menu_insurance_claim" name="Claims"
        parent="bahmni-insurance-odoo.menu_insurance_title" sequence="1"/>
        
    <!--Claims Form View -->
    <record id="view_claims_form" model="ir.ui.view">
            <field name="name">insurance.claim.form</field>
            <field name="model">insurance.claim</field>
            <field name="arch" type="xml">
                <form string="Claims" class="o_sale_order">
                <header>
                    <button name="action_claim_submit" string="Submit Claim" type="object" states="draft" class="btn-primary"/>
                    <button name="print_claim" string="Print" type="object" class="btn-primary"/>
                    <button name="action_confirm" states="draft" string="Confirm Claim" class="btn-primary o_sale_confirm" type="object" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,submitted"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="claim_code" String="NHIS Number" attrs="{'invisible': [('state', 'in', ['draft'])]}" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" domain="[('customer','=',True)]" context="{'search_default_customer':1, 'show_address': 1}" options='{"always_reload": True}' required="1"/>
                            <field name="nhis_number" String="NHIS Number" required="1"/>
                        </group>
                        <group>
                            <field name="claimed_date" attrs="{'invisible': [('state', 'in', ['draft'])]}" required="1"/>
                            <field name="claim_manager_id" required="1"/>
                            <field name="claimed_received_date" attrs="{'invisible': [('state', 'in', ['draft'])]}"/>
                            <field name="pricelist_id" groups="product.group_sale_pricelist"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Claim Items">
                            <field name="insurance_claim_line" mode="tree,kanban"
                                attrs="{'readonly': [('state', 'in', ('confirmed','submitted'))]}">
                                <form string="Claim Items">
                                    <group>
                                        <group>
                                            <field name="imis_product" required="1"/>
                                            <field name="imis_product_code" required="1"/>
                                            <field name="product_id" required="1"/>
                                            <field name="product_qty" required="1"/>
                                            <field name="price_unit" required="1"/>
                                            <field name="price_total" required="1"/>
                                            <field name="amount_approved" />
                                            <field name="rejection_reason" />
                                        </group>
                                    </group>
                                </form>
                                <tree string="Claim Item" editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_qty" />
                                    <field name="price_unit" />
                                    <field name="price_total" />
                                    <field name="amount_approved" />
                                    <field name="rejection_reason" />
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                                <kanban class="o_kanban_mobile">
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <field name="product_uom" groups="product.group_uom"/>
                                    <field name="price_total"/>
                                    <field name="currency_id" invisible="1"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                                <div class="row">
                                                    <div class="col-xs-12">
                                                        <strong><span><t t-esc="record.product_id.value"/></span></strong>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-xs-8 text-muted">
                                                        <span><t t-esc="record.product_qty.value"/> <t t-esc="record.product_uom.value"/></span>
                                                    </div>
                                                    <div class="col-xs-4 text-muted">
                                                        <span class="pull-right text-right"><t t-esc="record.price_total.value"/></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="Total Amount">
                                <field name="claimed_amount_total" widget='monetary'/>
                            </group>
                            <div class="oe_clear"/>
                        </page>
                        <page string="Sale Orders">
                            <separator string="Sale Orders"/>
                            <field name="sale_orders" nolabel="1">
                                <!-- <tree string="Sale Orders">
                                    <field name="name" string="Order Number"/>
                                    <field name="date_order"/>
                                    <field name="partner_id"/>
                                    <field name="user_id"/>
                                    <field name="amount_total" sum="Total Tax Included" widget="monetary"/>
                                </tree> -->
                            </field>
                        </page>
                        <page string="Eligibility Details">
                            
                        </page>
                        <page string="Claim History">
                            
                        </page>
                    </notebook>
                </sheet>
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div> -->
            </form>
        </field>
    </record>
    
</odoo>
