<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="insurance_consent_form_template">
        <t t-call="report.html_container">
            <t t-as="doc" t-foreach="docs">
                <div class="page">
                    <div class="or_structure">
                        <h3>Insuree's Signature</h3>
                        <span>I, <span
                                t-field="doc.insuree_name"/> with NHIS ID 
                            <span
                                t-field="doc.nhis_number"/> authorize <span t-field="doc.company_name"/> 
                            to submit claims on my behalf. I authorize the release of any medical or other information necessary to process my claims. 
                            </span>
                        <table class="table table-condensed">
                            <tr>
                                <td class="col-xs-4 pull-left" style="width: 100%; border-bottom: 1px solid #111111;white-space:nowrap;">
                                    <!-- &nbsp;&nbsp;&nbsp;&nbsp; -->
                                </td>
                                <td class="col-xs-4 pull-left">
                                    <strong>Signature</strong>
                                </td>
                                <td class="col-xs-4 pull-right" style="width: 100%; border-bottom: 1px solid #111111;white-space:nowrap;">
                                    <!-- &nbsp;&nbsp;&nbsp;&nbsp; -->
                                </td>
                                <td class="col-xs-4 pull-right">
                                    <strong>Date</strong>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
