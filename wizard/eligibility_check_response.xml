<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <record id="insurance_eligibility_check_result_view" model="ir.ui.view">
        <field name="name">view.insurance.eligibility.result</field>
        <field name="model">insurance.eligibility</field>
        <field name="arch" type="xml">
            <form string="View Insurance details">
                <group>
                    <group>
                        <field name="insuree_name" required="1"/>
                    </group>
                    <group>
                        <field name="nhis_number" required="1"/>
                    </group>
                    <group>
                        <field name="valid_till" required="1"/>
                    </group>
                    <group>
                        <field name="balance" required="1"/>
                    </group>
                </group>
                <footer states="get">
                    <button string="Close" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    
    <act_window name="Insurance Eligibility"
        res_model="insurance.eligibility"
        src_model="res.company"
        view_mode="form"
        target="new"
        key2="client_action_multi"
        id="action_check_insurance_eligibility"/>
    
</odoo>
